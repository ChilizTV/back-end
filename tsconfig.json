{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
